<%= render "shared/second-header"%>

<div class="field-wrap">
  <div class="sorting">Dr情報の作成</div>
    <%=form_with model: @doctor, local: true do |f|%>
    <%= render 'shared/error_messages', model: f.object %>
      <div class='symptoms-room-form__field'>
        <div class='field'>
          <%= f.label :ドクターネーム , class: 'symptom-room-form__label'%><br />
          <%= f.text_field :name, class: 'symptom__room_name field-dr', placeholder: '例)田中 太郎'%>
        </div>
        <div class='field'>
          <%= f.label :地域, class: 'symptom-room-form__label'%><br />
          <%= f.text_field :area, class: 'symptom__room_name field-dr', placeholder: '例）東京都 渋谷区'%>
        </div>
        <div class='field'>
          <%= f.label :専門, class: 'symptom-room-form__label'%><br />
          <%= f.text_area :speciality,size: "10x50", class: 'symptom__room_name field-dr-area', placeholder: '例）膝部 肩 スポーツ障害'%>
        </div>
        <div class='field'>
          <%= f.label :一言, class: 'symptom-room-form__label'%><br />
          <%= f.text_area :word, size: "10x50" , class: 'symptom__room_name field-dr-area', placeholder: '例）患者さん目線で治療にあたります。'%>
        </div>
        <br>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: 'symptom__room_name field-dr' , placeholder: '例)abcdefg@gmail.com'%>
        </div>
  
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class: 'symptom__room_name field-dr' , placeholder: '半角英数字6文字以上' %>
        </div>
  
        <div class="field">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class: 'symptom__room_name field-dr' , placeholder: '半角英数字6文字以上'%>
        </div>
  
        
          
            <div class='field'>
            <%= f.submit "登録", class: "actions-field-3"%>
            </div>
      </div>
      
    <% end %>

    <%= render "doctors/shared/links" %>
</div>
