<%= render "shared/second-header"%>

<div class="symptoms-form">
  <div class="symptoms-new">Dr情報の作成</div>
    <%=form_with model: @doctor, local: true do |f|%>
    <%#= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    問題なかったら消す
    <%= render 'shared/error_messages', model: f.object %>
      <%#= render "doctors/shared/error_messages", resource: resource %>
      問題なかったら消す
      <div class='symptoms-room-form__field'>
        <div class='symptom-room-form__field--left'>
          <%= f.label :ドクターネーム , class: 'symptom-room-form__label'%><br />
          <%= f.text_field :name, class: 'symptom__room_name symptom-form__input', placeholder: '例)田中 太郎'%>
        </div>
        <div class='symptom-room-form__field--left'>
          <%= f.label :地域, class: 'symptom-room-form__label'%><br />
          <%= f.text_field :area, class: 'symptom__room_name symptom-form__input', placeholder: '例）東京都 渋谷区'%>
        </div>
        <div class='symptom-room-form__field--left'>
          <%= f.label :専門, class: 'symptom-room-form__label'%><br />
          <%= f.text_field :speciality, class: 'symptom__room_name symptom-form__input', placeholder: '例）膝部 肩 スポーツ障害'%>
        </div>
        <div class='symptom-room-form__field--left'>
          <%= f.label :一言, class: 'symptom-room-form__label'%><br />
          <%= f.text_field :word, class: 'symptom__room_name symptom-form__input', placeholder: '例）患者さん目線で治療にあたります。'%>
        </div>
        <br>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
  
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
  
        <div class="field">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
  
        <div class='chat-room-form__field'>
          <div class='chat-room-form__field--left'></div>
            <div class='chat-room-form__field--right'>
            <%= f.submit "登録",class: 'chat-room-form__action-btn'%>
            </div>
          </div>
      </div>
    <% end %>

    <%= render "doctors/shared/links" %>
</div>
