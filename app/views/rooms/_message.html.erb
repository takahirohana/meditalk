<% if doctor_signed_in? %>
  <div class="chat-field">
    <% @messages.each do |m| %>
      <!-- メッセージがUserによるものだったら -->
      <% if m.is_user %>
        <!-- メッセージを右に寄せる -->
        <div class="message">
          <div class="upper-message">
            <div class="message-date">
              <%= l m.created_at %>
              <!--時刻の表示-->
            </div>
          </div>
          <div class="lower-message">
            <div class="message-content">
              <div class="faq_area">
                <div>
                  <dd><%= m.content %></dd>
                  <!--メッセージの表示-->
                </div>
              </div>
            </div>
          </div>
          <div class="message-image-position">
          <%= image_tag m.image.variant(resize: '200x200'), class: 'message-image' if m.image.attached? %>
          </div>
        </div>
      <!-- メッセージがDoctorによるものだったら -->
      <% else %>
        <!-- メッセージを左に寄せる -->
        <div class="message">
          <div class="upper-message-b">
            <div class="message-date-b">
              <%= l m.created_at %>
            </div>
          </div>
          <div class="lower-message-b">
            <div class="message-content-b">
              <div class="faq_area-b">
                <div>
                  <dt><%= m.content %></dt>
                </div>
              </div>
            </div>
          </div>
          <div class="message-image-position-b">
          <%= image_tag m.image.variant(resize: '200x200'), class: 'message-image' if m.image.attached? %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

